generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       String   @id @default(uuid())
  name     String   @unique
  password String
  storage  Storage[]
  files  File[]
}

model Storage {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id])
  userId String
  name    String
  files  File[]
}

model File {
  id        String  @id @default(uuid())
  storage   Storage? @relation(fields: [storageId], references: [id])
  storageId String?  
  user   User? @relation(fields: [userId], references: [id])
  userId String?  
  name      String
  size      Int
  path      String
  createdAt DateTime @default(now())
}
